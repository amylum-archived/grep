name 'grep'
org 'amylum'

licenses 'COPYING'

configure_flags(
  prefix: '/usr'
)

harden
cflags [
  "-Wno-error=unused-macros",
  "-Wno-error=suggest-attribute=noreturn",
  "-Wno-error=implicit-fallthrough="
]

build do
  run './bootstrap'
  configure
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'grep --version'
end
