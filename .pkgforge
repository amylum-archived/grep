name 'grep'
org 'amylum'

licenses 'COPYING'

configure_flags(
  prefix: '/usr'
)

harden
cflags ["-Wno-error=unused-macros"]
cflags ["-Wno-error=suggest-attribute=noreturn"]

build do
  run './bootstrap'
  configure
  make
  install
  rm 'usr/lib/charset.alias'
end

test do
  run 'grep --version'
end
